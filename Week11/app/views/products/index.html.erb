<style>
  #myicon { font-size: 120px; color: green;}
</style>

<div class="page-header">
  <i id="myicon" class="fa fa-flag fa-lg"></i>
  <%= link_to "Add a New Product", "/products/new", :class => "btn btn-md btn-success pull-right fa fa-flag" %>
  <h1>
    Product Catalog
    <small>Displaying <%= @product_list.count %> products.</small>
  </h1>
</div>

<% @product_list.each do |product| %>
  <div class="row">

    <div class="col-md-4">
      <a href="/products/<%= product.id %>/show">
        <img width="200" src="<%= product.image_url %>">
      </a>
    </div>

    <div class="col-md-8">
      <h3>
        <a href="/products/<%= product.id %>/show"><%= product.name %></a>
        <small class="text-muted">
<<<<<<< HEAD
          <% category = Category.find_by(:id => product.category_id) %>
          <%= category.name %>
          </small>
=======
          <%= product.category.name %>
        </small>
>>>>>>> FETCH_HEAD
      </h3>

      <p class="lead"><%= number_to_currency(product.price) %></p>
      <p><%= product.description %></p>

      <p class="pull-right">
        <%= link_to "Edit", "/products/#{product.id}/edit" %> |
        <%= link_to "Delete", "/products/#{product.id}/delete" %>
      </p>
    </div>
  </div>
<% end %>

