<div class="col-md-4">
  <p id="add_review" style="cursor: pointer" class="lead"><strong>Write Your Own Review.</strong></p>

  <div id="review_form" style="display: none;">
    <form action="/reviews/create" class="well">
          <input name="item_id" value=<%= @product.id %> type="hidden">

          <div class="form-group">
            <input name="title" id="title" type="text" class="form-control input-md" placeholder="Enter a title here...">
          </div>
          <div class="form-group">
            <select name="rating">
              <option value="1">1 Star</option>
              <option value="2">2 Stars</option>
              <option value="3">3 Stars</option>
              <option value="4">4 Stars</option>
              <option value="5">5 Stars</option>
            </select>
          </div>

          <div class="form-group">
            <textarea name="body" class="form-control input-md" rows="5" placeholder="Your review goes here." ></textarea>
          </div>
          <input type="submit" class="btn btn-md btn-success" value="Submit My Review">
        </form>
  </div>
</div>
  <script>
    $(function() {
      jQuery("#add_review").on("click", function() {
        $("#review_form").slideDown();
        $("#title").focus();
      });
    })
  </script>






